<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Haulage.CustomerPage"
             Title="Customer"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">
    <VerticalStackLayout>
        <Label 
            Text="&#10; Welcome to Customer Page!"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Billing Details:" TextColor="Black" Margin="10"/>
        <Entry x:Name="BillingDetailsEntry" Margin="10"/>
        <Label Text="Contact Details:" TextColor="Black" Margin="10"/>
        <Entry x:Name="ContactDetailsEntry" Margin="10"/>
        <Button Text="Save" Margin="10" Clicked="SaveButton_Click"/>
    </VerticalStackLayout>
</ContentPage>